---
import "../cssReset.css";
const {title} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="FDiaz portfolio" />
		<meta name="description" content="FDiaz portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Fdiaz - {title}</title>
	</head>
	<body> <main><slot /></main></body>
</html>
<style is:global>
	body {
		--grad-width: 2px;
		font-family:
			"poppins",
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Oxygen,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
		display: flex;
		min-height: 100vh;
		background-color: var(--bg);
		line-height: normal;
		align-items: center;
		justify-content: center;
	}
	main {
		flex: 1;
		color: var(--text);
		margin: 8em 6em;
		max-width: 1024px;
		display: flex;
		justify-content: center;
		gap: 4em;
	}
	@media (max-width: 1024px) {
		flex-direction: column !important;
		main {
			margin: 2em;
		}
	}

	@media (min-width: 320px) and (max-width: 500px) {
		html {
			display: flex;
		}
		body {
			flex: 1;
		}
		main {
			margin: 2em 1.2em;
		}
	}
</style>
