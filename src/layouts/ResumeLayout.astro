---
import "../cssReset.css";
const {title} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="FDiaz portfolio" />
		<meta name="description" content="FDiaz portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Fdiaz - {title}</title>
	</head>
	<body> <main><slot /></main></body>
</html>
<style is:global>
	body {
		--grad-width: 2px;
		font-family:
			"poppins",
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Oxygen,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
		display: flex;
		min-height: 100vh;
		background-color: var(--bg);
		line-height: normal;
		align-items: center;
		justify-content: center;
	}
	main {
		flex: 1;
		display: flex;
		justify-content: center;
		min-height: 100vh;
	}
</style>
