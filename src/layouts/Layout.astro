---
import "../cssReset.css";
import NavBar from "../components/NavBar.astro";
const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="FDiaz portfolio" />
		<meta name="description" content="FDiaz portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<slot />
			<NavBar />
		</main>
	</body>
</html>
<style is:global>
	:root {
		--outer-value: 250%;
		--gradient-angle: 180deg;

		--bg: #1b1d1e;
		--lighter-shade: #2b2c31;
		--darker-shade: #2b2c31;
		--text: #ffffff;
		--accent1: #a3dfd5;
		--accent1-shadow: #a3dfd550;
		--accent2: #deb3a2;
		--accent3: #a0cfeb;
		--accent4: #a5a2de;
		--accent5: #5394bd;
		--accent6: #de5757;
		--accent7: #a2deaa;
		--medium-shade: #393e41;
		--light-shade: #5e6269;

		--sub-header-font: 48px;
		--sub-header-weight: 600;
	}
	@font-face {
		font-family: "poppins";
		font-weight: 300;
		src:
			url("/fonts/poppins-light-webfont.woff2") format("woff2"),
			url("/fonts/poppins-light-webfont.woff") format("woff");
	}
	@font-face {
		font-family: "poppins";
		font-weight: 400;
		src:
			url("/fonts/poppins-regular-webfont.woff2") format("woff2"),
			url("/fonts/poppins-regular-webfont.woff") format("woff");
	}

	@font-face {
		font-family: "poppins";
		font-weight: 500;
		src:
			url("/fonts/poppins-medium-webfont.woff2") format("woff2"),
			url("/fonts/poppins-medium-webfont.woff") format("woff");
	}

	@font-face {
		font-family: "poppins";
		font-weight: 600;
		src:
			url("/fonts/poppins-semibold-webfont.woff2") format("woff2"),
			url("/fonts/poppins-semibold-webfont.woff") format("woff");
	}

	@font-face {
		font-family: "poppins";
		font-weight: 700;
		src:
			url("/fonts/poppins-bold-webfont.woff2") format("woff2"),
			url("/fonts/poppins-bold-webfont.woff") format("woff");
	}

	body {
		--grad-width: 2px;
		font-family:
			"poppins",
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Oxygen,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
		display: flex;
		justify-content: center;
		min-height: 100dvh;
		background-color: var(--bg);
	}

	main {
		padding: 3em;
		max-width: 80em;
		position: relative;
		flex: 1;
		color: white;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	::-webkit-scrollbar {
		width: 5px;
		height: 5px;
	}

	/* Track */
	::-webkit-scrollbar-track {
		background: #f1f1f110;
	}

	/* Handle */
	::-webkit-scrollbar-thumb {
		border-radius: 5px;
		background: var(--light-shade);
	}

	/* Handle on hover */
	@media (max-width: 1550px) {
		main {
			max-width: 60em;
			/* padding: 3em 7em !important; */
		}
	}

	@media (max-width: 1270px) {
		main {
			max-width: 50em;
			/* padding: 3em 7em !important; */
		}
	}

	@media (max-width: 650px) {
		main {
			padding: 2em 1em;
			/* padding: 3em 7em !important; */
		}
	}
	@media (max-width: 450px) {
		main {
			padding: 3em 1em;
			/* padding: 3em 7em !important; */
		}
	}

	@media (max-width: 1024px) {
		main {
			flex-direction: column-reverse;
			gap: 1.5em;
			& > :last-child {
				background-color: #1b1d1e;
				height: 4em;
				width: 100%;
				position: sticky !important;
				justify-content: center;
				align-items: center;
				margin: 0px !important;
				position: sticky !important;
				left: 0% !important;
				top: 3.5% !important;
				flex-direction: row !important;
				gap: 2.5em !important;
				& > a {
					height: fit-content;
				}
			}
		}
	}
</style>
