---
import "../cssReset.css";
const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="FDiaz portfolio" />
		<meta name="description" content="FDiaz portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main><slot/></main>
	</body>
</html>
<style is:global>
	:root {
		--outer-value:250%;
		--gradient-angle:180deg;
		
		--bg: #1b1d1e;
		--lighter-shade: #2B2C31;
		--text: #ffffff;
		--accent1: #A3DFD5;
		--accent2: #DEB3A2;
		--accent3: #A0CFEB;
		/* --accent4: #5394bd; */
		/* --medium-shade: #2e3133; */
		--light-shade: #5E6269;
		/* animation */
		--anim-duration: 1200ms;
		--anim-arrow-delay: 1200ms;
		--anim-arrow-duration: 200ms;
	}
	@font-face {
		font-family: "poppins";
		font-weight: 300;
		src:
			url("/fonts/poppins-light-webfont.woff2") format("woff2"),
			url("/fonts/poppins-light-webfont.woff") format("woff");
	}
	@font-face {
		font-family: "poppins";
		font-weight: 400;
		src:
			url("/fonts/poppins-regular-webfont.woff2") format("woff2"),
			url("/fonts/poppins-regular-webfont.woff") format("woff");
	}

	@font-face {
		font-family: "poppins";
		font-weight: 500;
		src:
			url("/fonts/poppins-medium-webfont.woff2") format("woff2"),
			url("/fonts/poppins-medium-webfont.woff") format("woff");
	}

	@font-face {
		font-family: "poppins";
		font-weight: 600;
		src:
			url("/fonts/poppins-semibold-webfont.woff2") format("woff2"),
			url("/fonts/poppins-semibold-webfont.woff") format("woff");
	}

	@font-face {
		font-family: "poppins";
		font-weight: 700;
		src:
			url("/fonts/poppins-bold-webfont.woff2") format("woff2"),
			url("/fonts/poppins-bold-webfont.woff") format("woff");
	}

	body {
		--grad-width: 2px;
		font-family:
			"poppins",
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Oxygen,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
		display: flex;
		height: 100vh;
		background-color: var(--bg);
	}

	main{
		flex: 1;
		color: white;
		margin: 4em 3em;	
		display: flex;
		justify-content: center;
		align-items: center;
	}

</style>
