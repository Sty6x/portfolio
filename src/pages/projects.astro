		& > :not(:first-child) {
			& > span {
				color: var(--accent1);
			}
		}
	}
	.text-content {
		position: relative;
		text-align: end;
		max-width: 80%;
		font-weight: 500;
		font-size: clamp(1rem, 1vw + 0.8rem, 2.4rem);
		margin-left: auto;
		/* line-height: 35px; */
