		#current-projects-container {
			grid-template-rows: repeat(2, minmax(200px, 300px));
			grid-template-columns: repeat(2, 1fr);
		}
		.text-content {
			font-size: clamp(1rem, 1vw + 1.2rem 3rem) !important;
		}
		#github-link {
			font-size: clamp(1rem, 1vw + 1rem, 1.8rem) !important;
		}

		.btn-text {
			font-size: clamp(1rem, 1vw + 1.2rem, 1.5rem) !important;
		}
		#back-btn-container,
		#to-email-page {
			gap: 2em;
		}
	}
	@media (min-width: 1921px) {
		#current-projects-container {
			grid-template-rows: repeat(2, minmax(200px, 300px));
			grid-template-columns: repeat(2, 1fr);
		}
		.text-content {
			line-height: 50px;
			font-size: clamp(1rem, 1vw + 1.5em, 5rem) !important;
			width: 80%;
		}
		#github-link {
			font-size: clamp(1rem, 1vw + 0.9rem, 1.4rem) !important;
		}

		.btn-text {
			font-size: clamp(1rem, 1vw + 1.2rem, 1.5rem) !important;
		}
		#back-btn-container,
		#to-email-page {
			gap: 2em;
		}
	}

	@media (max-width: 1450px) {
		.text-content {
