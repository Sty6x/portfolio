import Layout from "../layouts/Layout.astro";
---

<Layout title="Contacts">
	<div id="contents">
		<section id="left">
			<div class="text-content-container">
				<div id="back-btn-container">
					<ToBtn link="/projects" text={"Back to Projects"} />
				</div>
				<div class="text-content">
					<h1>I'm Free.</h1>
					<h1>Let's chat, work together</h1>
					<h1>and build things.</h1>
					<p>Get in touch.</p>
				</div>
				<div id="mail-box">
					<a
						target="_blank"
						rel="noopener noreferrer"
						href="/resume"
						class="box-container">
						<span id="icon-container">
							<span id="pdf-icon"></span>
						</span>
						<span class="box">
							<p>Get my resume</p>
							<p>Resume</p>
						</span>
					</a>
					<a class="box-container">
						<span id="icon-container">
							<span id="mail-icon"></span>
						</span>
						<span class="box">
							<p>Mail me at</p>
							<p>franzdiaz460@gmail.com</p>
						</span>
					</a>
				</div>
			</div>
		</section>
		<section id="right">
			<span id="pop-up-notification" class="">
				<p id="pop-up-text"></p>
				<span id="pop-up-icon" class="on-success"></span>
			</span>
			<form>
				<h2>Send me a message.</h2>
				<div id="name" class="inputs">
					<input
						required
						class="input"
						type="text"
						id="name"
						name="name"
						placeholder="Fullname*"
					/>
				</div>
				<div id="email" class="inputs">
					<input
						required
						class="input"
						type="email"
						id="email"
						name="email"
						placeholder="Email address*"
					/>
				</div>
				<div id="subject" class="inputs">
					<input
						class="input"
						type="text"
						id="subject"
						name="subject"
						placeholder="Subject"
					/>
				</div>
				<div id="message" class="inputs">
					<label for="message">Tell me what you think</label>
					<textarea
						class="input"
						id="message"
						name="message"
						placeholder="Your message"></textarea>
				</div>
				<div id="submit-btn">
					<button class="input" type="submit">Send message</button>
				</div>
			</form>
		</section>
	</div>
</Layout>
