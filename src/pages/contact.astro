---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contacts">
	<section id="left">
		<div class="text-content-container">
			<div class="text-content">
				<h1>I'm Free.</h1>
				<h1>Let's chat, work together</h1>
				<h1>and build things.</h1>
				<p>Get in touch.</p>
			</div>

			<div id="mail-box">
				<div id="mail-text-container">
					<span id="mail-icon-container">
						<span id="mail-icon"></span>
					</span>
					<span id="mail-text">
						<p>Mail me at</p>
						<p>franzdiaz460@gmail.com</p>
					</span>
				</div>
			</div>
		</div>
	</section>
	<section id="right">
		<form method="post" action="/create-message">
			<h2>Send me a message.</h2>
			<div id="name" class="inputs">
				<!-- <label for="name">Full name*</label> -->
				<input type="text" id="name" name="name" placeholder="Fullname" />
			</div>
			<div id="email" class="inputs">
				<!-- <label for="email">Email address*</label> -->
				<input
					type="email"
					id="email"
					name="email"
					placeholder="Email address"
				/>
			</div>
			<div id="subject" class="inputs">
				<!-- <label for="subject">Subject</label> -->
				<input type="text" id="subject" name="subject" placeholder="Subject" />
			</div>
			<div id="message" class="inputs">
				<label for="message">Message</label>
				<textarea id="message" name="message"></textarea>
			</div>
			<div id="submit-btn">
				<button>Send message</button>
			</div>
		</form>
	</section>
</Layout>
<script></script>
<style>
	section {
		flex: 1;
		height: 100%;
	}
	#left {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}
	#right {
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.text-content {
		position: relative;
		& > h1 {
			margin-left: 0.3em;
			font-weight: 600;
			font-size: 3.5rem;
		}
		& > p {
			margin-left: 1em;
			color: grey;
			font-weight: 400;
			font-size: 1.2rem;
		}
	}
	.text-content::after {
		content: "";
		display: block;
		position: absolute;
		top: 0;
		width: 105%;
		height: 100%;
		background-color: var(--bg);
		z-index: 10;
		/* left: -2%; */
		animation: text-cover 700ms 450ms ease-in-out forwards normal;
		transform: rotate(180deg);
	}
	#mail-box {
		opacity: 0;
		animation: github-link forwards normal 400ms 200ms ease-in-out;
		position: absolute;
		margin-top: 1em;
		padding: 1em 2em;
		width: min-content;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: var(--lighter-shade);
		border-radius: 5px;
	}
	#mail-text-container {
		gap: 1em;
		display: flex;
		align-items: center;
	}
	#mail-text {
		font-weight: 600;
	}
	#mail-text > :last-child {
		color: var(--accent1);
	}
	#mail-icon-container {
		width: 100%;
		height: 100%;
		background-color: var(--light-shade);
		padding: 0.5em;
		border-radius: 5px;
		& > :first-child {
			display: flex;
			align-items: center;
			justify-content: center;
			width: 30px;
			height: 30px;
			background-image: url("../assets/icons/mail.svg");
		}
	}

	#right > form {
		padding: 3em;
		/* background-color: var(--lighter-shade); */
		border: 2px solid var(--lighter-shade);
		height: 80%;
		width: calc(60% + 6em);
		min-width: 500px;
		border-radius: 5px;
		& > h2 {
			font-weight: 600;
			font-size: 2rem;
			margin-bottom: 1em;
		}
	}
	.inputs {
		& > * {
			appearance: none;
			width: 100%;
			border-radius: 2px;
			display: block;
		}
		&:not(:last-child) {
			margin-bottom: 2em;
		}
		& > textarea {
			height: 200px;
			min-height: 50px;
			max-height: 200px;
		}
	}

	input,
	textarea {
		font-size: 1rem;
		padding: 0.4em;
	}
	input,
	textarea {
		background-color: var(--lighter-shade);
	}
	input:focus,
	textarea:focus {
		outline: 2px solid var(--accent1);
		border: none;
	}
	#submit-btn {
		& > button {
			background-color: var(--accent1);
			color: var(--bg);
			font-weight: 600;
			border-radius: 2px;
			padding: 0.6em 1em;
		}
	}
</style>
