---
import Layout from "../layouts/Layout.astro";
import ToBtn from "../components/ToBtn.astro";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Home">
	<section id="container">
		<div id="hero">
			<h2 class="highlight-accent">
				{"<SOFTWARE DEVELOPER/>"}
			</h2>
			<span id="greet-text">
				<span> Oh Hello!</span>
				<span> I'm <span class="highlight-accent"> Franz Diaz</span></span>
			</span>
			<div id="intro-container">
				<p id="short-introduction">
					I am a self-taught <span class="highlight-accent">
						front-end developer</span
					> currently based in Dubai UAE, I help create UI for your custom
					websites to help your business grow.
				</p>
			</div>
		</div>
		<ToBtn link="/about" text={"More about me"} />
	</section>
</Layout>
<script is:inline></script>

<style>
	.highlight-accent {
		color: var(--accent1);
	}
	#container {
		display: flex;
		align-items: center;
		flex-direction: column;
		gap: 2.5em;
	}
	#hero {
		display: flex;
		flex-direction: column;
		text-align: center;
		gap: 1em;
		& > h2 {
			font-size: 18px;
			letter-spacing: 10px;
			font-weight: 500;
		}
	}
	#intro-container {
		display: flex;
		align-items: center;
		justify-content: center;
		& > p {
			line-height: 30px;
			font-size: 20px;
			font-weight: 200;
			min-width: 20em;
			max-width: 40em;
		}
	}
	#greet-text {
		& > :first-child {
			display: block;
		}
		& > span {
			font-weight: 600;
			font-size: 64px;
		}
	}

	@media (max-width: 1030px) {
		#greet-text {
			& > span {
				font-size: 48px;
			}
		}
		#intro-container {
			& > p {
				font-size: 16px;
				font-weight: 200;
				line-height: 25px;
			}
		}
		#hero {
			& > h2 {
				font-size: 18px;
				letter-spacing: 10px;
				font-weight: 500;
			}
		}
	}
	@media (max-width: 600px) {
		#greet-text {
			& > span {
				font-size: 48px;
			}
		}
		#intro-container {
			& > p {
				font-size: 14px;
				font-weight: 200;
				line-height: 20px;
			}
		}
		#hero {
			& > h2 {
				font-size: 12px;
			}
		}
	}
	@media (max-width: 450px) {
		#greet-text {
			& > span {
				font-size: 32px;
			}
		}
		#intro-container {
			& > p {
				font-size: 14px;
				font-weight: 200;
				line-height: 20px;
			}
		}
		#hero {
			& > h2 {
				font-size: 10px;
				line-height: 20px;
			}
		}
	}
</style>
