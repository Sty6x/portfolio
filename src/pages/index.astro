---
import BarChart from "../components/BarChart.astro";
import Layout from "../layouts/Layout.astro";
import ToBtn from "../components/ToBtn.astro";
---

<Layout title="FDiaz">
	<section id="container">
		<section id="hero">
			<h1 id="profession">Software Developer</h1>
			<span id="greet">
				<p>Oh Hello!</p>
				<p>I'm Franz Diaz</p>
			</span>
			<div id="about-panel" class="inactive">
				<div id="about-contents">
					<p>I create UI for custom websites that specifies business needs.</p>
					<!-- <p>
					Iâ€™ve been studying software development for 1 and a half years now,
					through free and open source modules.
				</p>
				<p>
					Currently I am a Frontend Developer, studying to become a Backend
					developer I prefer building APIs, handling database queries, requests
					and response cycles, authentication, validating user requests and all
					that jazz.
				</p> -->
				</div>
			</div>
		</section>
		<div id="btn-container">
			<ToBtn link="/projects" />
		</div>
	</section>
</Layout>

<script is:inline>
const aboutPanel = document.getElementById("about-panel");
console.log(aboutPanel);
aboutPanel.addEventListener(
	"mouseenter",
	(e) => {
		const target = e.currentTarget;
		target.classList.replace("inactive", "active");
	},
	false,
);

aboutPanel.addEventListener(
	"mouseleave",
	(e) => {
		const target = e.currentTarget;
		target.classList.replace("active", "inactive");
	},
	false,
);
</script>

<style>
	#container {
		display: flex;
		align-items: center;
		/* position: relative; */
	}
	#btn-container {
		position: absolute;
		right: 10%;
	}
	section#hero {
		position: relative;
	}
	#profession {
		color: var(--accent1);
		font-weight: 400;
		font-size: clamp(0.7rem, 1vw + 0.4rem, 1.2rem);
		text-transform: uppercase;
		letter-spacing: 0.8em;
	}
	span#greet {
		display: block;
		margin-top: 0.4em;
		margin-bottom: 0.4em;
		line-height: 60px;
		font-weight: 500;
		font-size: clamp(1rem, 1vw + 2rem, 3rem);
	}

	div#about-panel {
		position: absolute;
		cursor: pointer;
		background-color: var(--accent1);
		color: var(--bg);
		overflow: hidden;
		border-radius: 9px;
		padding: 0.8em;
		width: max-content;
		min-width: 100%;
		display: flex;
		align-items: center;
	}
	div#about-contents {
		font-weight: 600;
		:first-child {
			font-weight: 600;
			font-size: 1.1rem;
		}
		& > :not(:first-of-type) {
			margin-top: 1em;
		}
	}

	@media (max-width: 1050px) {
		#btn-container {
			top: 50%;
			transform: translate(-50%, -50%);
			scale: 0.7;
		}
		div#about-panel {
			width: 100%;
			padding: 0.6em;
			#about-contents > :first-child {
				font-size: clamp(1rem, 1vw + 0.5rem, 1rem);
			}
		}
		#container {
			flex-direction: column;
		}
	}
	@media (max-width: 750px) {
		span#greet {
			line-height: normal;
		}
		#btn-container {
			top: 75%;
			left: 50%;
			transform: translate(-50%, -50%);
			scale: 0.7;
		}
		#container {
			flex-direction: column;
		}
	}

	@media (max-width: 400px) {
		#btn-container {
			top: 75%;
			left: 50%;
			transform: translate(-50%, -50%);
			scale: 0.7;
		}
		#profession {
			font-size: 0.6rem !important;
		}
		#about-contents > p {
			font-size: 0.6rem !important;
		}
		#about-contents {
			width: 100%;
		}
	}
</style>
