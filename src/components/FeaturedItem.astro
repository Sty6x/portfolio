---
import vimnotesImg from "../assets/images/vimnotes-1.png";
import wfCLI from "../assets/images/wf-term.png";
import timeTracker from "../assets/images/timetracker-2.jpg";
const {title, paraText, linkTo, metaArr, componentStyles} = Astro.props;
---

<div id="featured-item-container" class="container">
	<div class="left-contents">
		<span class="imp-data">
			<span class="meta-data-container">
				{
					metaArr.map((text) => {
						return <span>{text}</span>;
					})
				}
			</span>
			<h3 style={componentStyles}>{title}</h3>
			<p>{paraText}</p>
		</span>
		<a href={linkTo}>Go to {title} <span>{">"}</span></a>
	</div>
	<div class="bg-image"></div>
	<!-- <Image class="image-container" src={imgPath} alt={`Image of ${title}`} /> -->
</div>

<script></script>

<style>
	.container {
		padding: 2.5em 4em;
		background-color: var(--darker-shade);
		display: flex;
		justify-content: space-between;
		overflow: hidden;
		position: relative;
		backdrop-filter: blur(10px);
	}
	.container::before {
		content: "";
		position: fixed;
		display: block;
		z-index: -1;
		left: 100%;
		top: 70%;
		scale: 2;
		transform: rotateZ(10deg);
		background-image: var(--bg);
		background-size: contain;
		background-repeat: no-repeat;
		width: 100%;
		height: 100%;
		opacity: 0.8;
		-webkit-filter: blur(3px);
		-moz-filter: blur(3px);
		-o-filter: blur(3px);
		-ms-filter: blur(3px);
		filter: blur(3px);
		transition: all 250ms ease-in-out;
		overflow: hidden;
	}
	.container:nth-of-type(1)::before {
		background-image: url("../assets//images/vimnotes-1.png");
		box-shadow: 12px 5px 10px 10px var(--accent4);
	}
	.container:nth-of-type(2)::before {
		box-shadow: 12px 5px 10px 10px var(--accent2);
		left: 110%;
		top: -60%;
		/* scale: 1.4; */
		transform: rotateZ(-10deg);
		background-image: url("../assets//images/wf-term.png");
	}
	.container:nth-of-type(3)::before {
		box-shadow: 12px 5px 10px 10px var(--accent3);
		left: 80%;
		top: 20%;
		scale: 1.4;
		transform: rotateZ(4deg);
		background-image: url("../assets//images/tracker.png");
	}
	.container:hover {
		&::before {
			-webkit-filter: blur(0px);
			-moz-filter: blur(0px);
			-o-filter: blur(0px);
			-ms-filter: blur(0px);
			filter: blur(0px);
			transition: all 250ms ease-in-out;
		}
	}
	.left-contents {
		max-width: 50%;
		min-width: 20em;
		display: flex;
		flex-direction: column;
		gap: 1.6em;
	}

	.meta-data-container {
		display: flex;
		gap: 0.4em;
		margin-bottom: 0.6em;
		& > span {
			font-size: 0.8rem;
			font-weight: 500;
			min-width: fit-content;
			background-color: var(--bg);
			padding: 0.6em 1em;
			align-items: center;
			justify-content: center;
			/* border-radius: 3px; */
		}
	}
	.imp-data {
		width: 100%;
		& > h3 {
			font-size: 32px;
			font-weight: 700;
			/* color: var(--accent2); */
			margin-bottom: 0.2em;
		}

		& > p {
			max-width: 40em;
			font-size: 16px;
			line-height: 1.2rem;
		}
	}
	a {
		max-width: max-content;
		color: var(--accent1);
		text-decoration: underline;
	}

	a:link,
	a:visited {
		color: var(--accent1);
	}
	@media (max-width: 600px) {
		.container {
			padding: 1em 2em;
		}
		.left-contents {
			gap: 2em;
		}
		a {
			font-size: 0.8rem;
		}

		.meta-data-container {
			overflow-x: auto;
			max-width: max-content;
			gap: 0.2em;
			& > span {
				font-size: 0.7rem;
				font-weight: 500;
				min-width: fit-content;
				background-color: var(--bg);
				padding: 0.6em 0.8em;
				align-items: center;
				justify-content: center;
			}
		}
		.imp-data {
			width: 100%;
			& > h3 {
				font-size: 22px;
				font-weight: 700;
				margin-bottom: 0.2em;
			}

			& > p {
				max-width: 30em;
				font-size: 12px;
				line-height: 1.2rem;
			}
		}
		a {
			color: var(--accent1);
			text-decoration: underline;
		}
	}
	@media (max-width: 450px) {
		.container {
			padding: 1em 1.6em;
		}
		.meta-data-container {
			overflow-x: auto;
			max-width: max-content;
			gap: 0.2em;
			& > span {
				font-size: 0.5rem;
				padding: 0.6em 0.6em;
			}
		}
		.imp-data {
			& > h3 {
				font-size: 22px;
				font-weight: 700;
				margin-bottom: 0.2em;
			}

			& > p {
				max-width: 20em;
				font-size: 12px;
				line-height: 1.2rem;
			}
		}
		a {
			color: var(--accent1);
			text-decoration: underline;
		}
	}
</style>
