---
const {title, desc, lang, link} = Astro.props;
---

<a id="repo-container" href={link}>
	<div id="repo-title-desc">
		<h2>{title}</h2>
		<p>{desc}</p>
	</div>
	<p id="languages">{lang}</p>
</a>

<style>
	#repo-container {
		transform-origin: 50%;
		cursor: pointer;
		padding: 1em 0.8em;
		border: 1px solid var(--lighter-shade);
		border-radius: 10px;
		display: flex;
		flex-direction: column;
		transition: background-color 150ms ease-in-out;
		& > :last-child {
			margin-top: auto;
		}
	}

	#repo-container:hover {
		background-color: var(--lighter-shade);
		transition: background-color 150ms ease-in-out;
		& > #repo-title-desc {
			& > h2 {
				color: var(--accent3);
			}
		}
	}

	#repo-title-desc {
		& > h2 {
			font-weight: 600;
			font-size: clamp(0.5rem, 1vw + 0.5rem, 1.2rem);
			color: var(--accent3);
		}
		& > :last-child {
			font-size: clamp(0.5rem, 1vw + 0.4rem, 1rem);
		}
	}
	#languages {
		font-size: 0.8rem;
		color: var(--accent3);
	}
	@media (min-width: 1921px) {
		#repo-title-desc {
			& > h2 {
				font-size: clamp(1rem, 1vw + 1rem, 1.8rem);
			}
			& > :last-child {
				font-size: clamp(1rem, 1vw + 0.8rem, 1.4rem);
			}
		}
		#languages {
			font-size: clamp(1rem, 1vw + 0.8rem, 1.2rem);
		}
	}
	@media (min-width: 320px) and (max-width: 500px) {
		#repo-title-desc {
			& > h2 {
				font-size: clamp(0.8rem, 1vw + 0.2rem, 1.2rem);
			}
			& > :last-child {
				font-size: clamp(0.5rem, 1vw + 0.2rem, 1rem);
			}
		}
		#languages {
			font-size: clamp(0.5rem, 1vw + 0.3rem, 0.8rem);
		}
	}
</style>
