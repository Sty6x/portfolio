---
const {title, desc, lang, link, stars} = Astro.props;
---

<a class="repo-container" href={link}>
	<div id="repo-title-desc">
		<div class="repo-title">
			<h2>{title}</h2>
			<p>Public</p>
		</div>
		<p>{desc}</p>
	</div>
	<div class="stars-languages">
		<span>
			<p id="languages">{lang}</p>
		</span>
		<span>
			<p id="stars">{stars}</p>
		</span>
	</div>
</a>

<script></script>
<style>
	.repo-container {
		flex: 1;
		transform-origin: 50%;
		cursor: pointer;
		padding: 1em 1.2em;
		min-height: 150px;
		border: 1px solid var(--lighter-shade);
		border-radius: 10px;
		display: flex;
		flex-direction: column;
		transition: background-color 150ms ease-in-out;
		& > :last-child {
			margin-top: auto;
		}
	}

	.repo-container:hover {
		background-color: var(--lighter-shade);
		transition: background-color 150ms ease-in-out;
		& > #repo-title-desc {
			& > h2 {
				color: var(--accent3);
			}
		}
	}

	#repo-title-desc {
		display: flex;
		flex-direction: column;
		gap: 0.5em;

		& #repo-title > h2:hover {
			text-decoration: underline;
		}

		& > .repo-title {
			font-weight: 600;
			font-size: 1rem;
			color: var(--accent3);
			display: flex;
			gap: 0.7em;
			align-items: center;
			& > :last-child {
				font-weight: 600;
				border-radius: 500px;
				padding: 2px 10px;
				font-size: 0.6rem;
				border: solid 1px var(--light-shade);
				color: var(--light-shade);
			}
		}
		& > :last-child {
			max-width: 700px;
			color: var(--light-shade);
			line-height: 18px;
			font-size: 0.9rem;
		}
	}
	.stars-languages {
		display: flex;
		gap: 1.2em;
		& > span {
			display: flex;
			align-items: center;
			gap: 0.6em;
		}
		& > span:first-child::before,
		& > span:last-child::before {
			content: "";
			background-position: center;
			width: 20px;
			height: 20px;
			background-size: 20px 20px;
			display: inline-block;
		}

		& > span:first-child::before {
			background-image: url("../assets/icons/language.svg");
		}
		& > span:last-child::before {
			background-image: url("../assets/icons/stars.svg");
		}
	}
	#languages {
		font-size: 0.8rem;
		color: var(--light-shade);
	}

	#stars {
		font-size: 0.8rem;
		color: var(--light-shade);
	}
</style>
